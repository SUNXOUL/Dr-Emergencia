@page "/C_Emergencia"
    <h3>Consultar Emergencias</h3>


@inject DetalleEmergenciaBLL DetallesEmergencias

<head>
    <style>
        .hidden {
            display: none;
        }

        .form-select {
            border: none;
            width: 150px;
        }

        .form-floating {
            width: 15%;
        }

        .Entrada {
            display: inline-block;
            padding: 5px;
            align-items: center;
        }

        .Entrada input {
            border-radius: 50px;
            background-color: #D9D9D9;
            border-color: #D9D9D9;
            border: 15px;
            margin: 5px;
        }

        .Entrada label {
            margin: 5px;
        }

        .Entrada textarea {
            background-color: #D9D9D9;
            border-color: #D9D9D9;
            border-radius: 15px;
            width: 100%;
        }
    </style>
</head>
<div class="body">

    <RadzenDataGrid AllowFiltering="true" AllowColumnResize="true" AllowAlternatingRows="false"
        FilterMode="FilterMode.Advanced" AllowGrouping="true" AllowSorting="true" AllowPaging="true"
        PagerHorizontalAlign="HorizontalAlign.Left" Data="DetallesEmergencias.GetList()" TItem="DetalleEmergencia" ColumnWidth="200px"
        LogicalFilterOperator="LogicalFilterOperator.Or" ShowPagingSummary="true">

        <Columns>
            <RadzenDataGridColumn TItem="DetalleEmergencia" Filterable="false" Sortable="false"  Frozen="true" Title="Acciones">
                <Template Context="Item">
                    <RadzenLink Path=@($"V_DetallesEmergencias/{Item.OrdenID}") Text="Ver" />
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="DetalleEmergencia" Property="PrimerNombre" Title="Primer nombre" />
            <RadzenDataGridColumn TItem="DetalleEmergencia" Property="SegundoNombre" Title="Segundo Nombre" />
            <RadzenDataGridColumn TItem="DetalleEmergencia" Property="PrimerApellido" Title="Primer Apellido" />
            <RadzenDataGridColumn TItem="DetalleEmergencia" Property="SegundoApellido" Title="Segundo Apellido" />
            <RadzenDataGridColumn TItem="DetalleEmergencia" Property="Sexo" Title="Sexo" />
            <RadzenDataGridColumn TItem="DetalleEmergencia" Property="Cedula" Title="Cedula" />
            <RadzenDataGridColumn TItem="DetalleEmergencia" Property="CedulaTutor" Title="Cedula Tutor" />
            <RadzenDataGridColumn TItem="DetalleEmergencia" Property="Fecha" Title="Fecha" />
            <RadzenDataGridColumn TItem="DetalleEmergencia" Property="Medico" Title="Medico" />

        </Columns>

    </RadzenDataGrid>






</div>

