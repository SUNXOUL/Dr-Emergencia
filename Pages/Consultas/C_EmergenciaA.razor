            border: none;
            width: 150px;
        }

        .form-floating {
            width: 15%;
        }

        .Entrada {
            display: inline-block;
            padding: 5px;
            align-items: center;
        }

        .Entrada input {
            border-radius: 50px;
            background-color: #D9D9D9;
            border-color: #D9D9D9;
            border: 15px;
            margin: 5px;
        }
        .Entrada select {
        width: 200px;
        height: 35px;
        border-radius: 50px;
        background-color: #D9D9D9;
        border-color: #D9D9D9;
        border: 15px;
        margin: 5px;
        }
        body {
        background-image: url('https://wallpaper.dog/large/903575.jpg');
        background-attachment: fixed;
        background-size: cover;
